<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b8deff"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/cloud" />

    <ImageView
        android:id="@+id/bear"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/ami" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/grass"
        android:layout_marginTop="230dp"
        android:layout_marginStart="550dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/bear"
        android:layout_marginTop="-15dp"
        android:background="@drawable/ground"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/mole"
        android:layout_marginTop="190dp"
        android:layout_marginStart="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="330dp"
        android:gravity="center_horizontal"
        android:background="#752c01">

        <ImageButton
            android:id="@+id/go_study"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/carrot"
            android:onClick="onClick_study" />

        <ImageButton
            android:id="@+id/go_game"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginStart="150dp"
            android:onClick="onClick_game"
            android:background="@drawable/carrot" />

        <ImageButton
            android:id="@+id/go_exercise"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginStart="150dp"
            android:onClick="onClick_exercise"
            android:background="@drawable/carrot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="학습하기"
            android:fontFamily="@font/maple"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="게임하기"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="200dp"
            android:fontFamily="@font/maple"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="연습장"
            android:fontFamily="@font/maple"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>